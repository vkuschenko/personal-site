<nav class="nav-mobile">
  <button class="menu-btn" id="mobile-menu-btn">
    <span class="menu-btn__stroke"></span>
    <span class="menu-btn__stroke"></span>
    <span class="menu-btn__stroke"></span>
  </button>

  <ul class="nav-mobile__list" id="nav-mobile__list">
    <li>
      <a href="/">About me</a>
    </li>
    <li>
      <a href="/contacts">Contacts</a>
    </li>
    <li><a href="/blog">Blog</a></li>
  </ul>
</nav>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  menuBtn.addEventListener("click", () => {
    const ul = document.getElementById("nav-mobile__list");
    ul.classList.toggle("nav-mobile__list_active");
  });
</script>

<style>
  .menu-btn {
    width: 20px;
    height: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
    background-color: #fff;
    border: none;
  }

  .menu-btn__stroke {
    display: inline-block;
    width: 100%;
    height: 4px;
    background-color: #000;
    border-radius: 2px;
  }

  .nav-mobile {
    height: 60px;
    display: flex;
    align-items: center;
    background-color: #fff;
  }

  .nav-mobile__list {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    width: 100dvw;
    height: 100vh;
    height: 100dvh;
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 32px;
    list-style: none;
    z-index: 1;
    background-color: #fff;
  }

  .nav-mobile__list_active {
    display: flex;
  }

  @media screen and (min-width: 769px) {
    .menu-btn,
    .nav-mobile {
      display: none;
    }
  }
</style>
